@model Entity.Models.Category


@{
    ViewBag.PageTitl = "Category";
    ViewBag.Cardtitl = "Edit category";
}

<form method="post">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for ="Name">Name</label>
        <input asp-for="Name"  class="form-control" />
        <span asp-validation-for="Name" ></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<a href="@Url.Action("Index")">Back to List</a>
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
