@model Shop.Entities.Models.Product

@{
    ViewBag.PageTitle = "Delete Product";
    ViewBag.CardTitle = "Delete Product";
}

<h1>Delete Product</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this product?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd> <!-- Format as currency -->

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd> <!-- Display the category name instead of Id -->
    </dl>
</div>

@if (!string.IsNullOrEmpty(Model.Img))
{
    <div class="mb-3">
        <h4>Product Image</h4>
        <img src="~/@Model.Img" alt="Product Image" class="img-thumbnail" style="max-width: 150px;" />
        <p class="text-danger"><strong>Note:</strong> This image will be deleted along with the product.</p>
    </div>
}

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
